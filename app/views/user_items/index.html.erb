<%= link_to 'New Item', new_user_user_item_path %>

<ul>
  <% @user_items.each do |item| %>
    <li>
      <%= item[:name] %>, Multiple claims allowed?: <%= item[:claim_more_than_once] %>
      <% item[:occasions].each do |o| %>
        <div>
          <%=o.name%>
        </div>
      <% end %>
    </li>
